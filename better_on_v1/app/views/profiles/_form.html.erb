<%= form_for @profile do |f| %>

    <p>
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
    </p>
    
    <p>
        <%= f.label :email %><br/>
        <%= f.text_field :email %>
    </p>
    
    <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </p>
    
    <p>
        <%= f.label :organization %><br/>
        <%= f.collection_select :organization_id, Organization.all, :id, :organization_name, include_blank: true %>
    </p>
    
    <p>
        <%#<%= f.label "Profile Picture" %><br>
        <%#<%= f.file_field :avatar %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
    
<% end %>

<% if @profile.errors.any? %>
    <h2>The following errors prevented the session from getting created</h2>
    <ul>
        <% @profile.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>


<h1>Showing all organizations</h1>

<table border="1">
    <tr>
        <td><%= link_to "New Organization", new_organization_path %></td>
        <td><%= link_to "See All Sessions", sessions_path %></td>
        <td><%= link_to "See All Users", profiles_path %></td>
    </tr>
</table>

<hr>

<table>
    <tr>
        <th>Company name</th>
        <th>Number of users</th>
    </tr>
    <% @organizations.each do |organization| %>
        <tr>
            <td><%= organization.organization_name %></td>
            <td><%= organization.profiles.count %></td>
            <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
            <td><%= link_to 'Show', organization_path(organization) %></td>
            <td><%= link_to 'Delete', organization_path(organization), method: :delete, 
                    data: { confirm: "Are you sure?" } %></td>
        </tr>
    <% end %>
</table>
